<resources>

    <style name="GdxTheme" parent="MaterialDrawerTheme">
        <item name="android:windowBackground">@color/fundoTela</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/texto</item>
        <item name="android:textSize">@dimen/texto_padrao_FO</item>
        <item name="android:typeface">sans</item>
        <item name="android:editTextBackground">@color/view_color</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/roundedbutton</item>
    </style>

    <style name="CustomDialog" parent="GdxTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
