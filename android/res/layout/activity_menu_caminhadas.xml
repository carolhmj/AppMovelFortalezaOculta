<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoTelaEscuro"
    tools:context="br.great.jogopervasivo.actvititesDoJogo.MenuCaminhadas">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ab_color"
        android:padding="@dimen/padding_ab">

        <TextView
            android:id="@+id/menu_caminhadas_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/caminhadas" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/list_menu_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_caminhadas_botao_bode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/caminhada_bode_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bode_ioio" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:id="@+id/menu_caminhadas_botao_calungueira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/caminhada_calungueira_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/calungueira" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:id="@+id/menu_caminhadas_botao_gato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/caminhada_gato_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gato_pingado" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
