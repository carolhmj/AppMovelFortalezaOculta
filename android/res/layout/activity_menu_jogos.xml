<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundoTelaEscuro"
    tools:context="br.great.jogopervasivo.actvititesDoJogo.MenuJogos">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/ab_color"
        android:padding="@dimen/padding_ab"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/menu_jogos_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/list_menu_margin_top"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_jogos_botao_caminhada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/caminhadas_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/caminhadas" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:id="@+id/menu_jogos_botao_cooperativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/cooperativo_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/conectar" />
        </LinearLayout>

        <include layout="@layout/separator" />

        <LinearLayout
            android:id="@+id/menu_jogos_botao_outro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/list_item_vertical_padding"
            android:paddingBottom="@dimen/list_item_vertical_padding"
            android:paddingStart="@dimen/list_item_horizontal_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/list_item_horizontal_padding"
                android:adjustViewBounds="true"
                android:src="@mipmap/other_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cooperativo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
